{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Place list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Website</th>
                <th>Facebook</th>
                <th>Twitter</th>
                <th>Phone</th>
                <th>Contactname</th>
                <th>Contactphone</th>
                <th>Contactemail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_place_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.website }}</td>
                <td>{{ entity.facebook }}</td>
                <td>{{ entity.twitter }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.contactName }}</td>
                <td>{{ entity.contactPhone }}</td>
                <td>{{ entity.contactEmail }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_place_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_place_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_place_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
